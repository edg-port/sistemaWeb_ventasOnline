@model UsuarioModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<div class="container">
  <div class="row">
    <!-- Left Blank Side -->
    <div class="col-lg-6"></div>

    <!-- Right Side Form -->
    <div class="col-lg-6 d-flex align-items-center justify-content-center right-side">
      <div class="form-2-wrapper">
        <div class="logo text-center">
          <h2>Logo</h2>
        </div>
        <h2 class="text-center mb-4">Inicia sesion</h2>
        <form asp-action="Login" method="post">
          <div class="mb-3 form-box">
            <input type="email" class="form-control" asp-for="email"  placeholder="Introduce tu email" required>
          </div>
          <div class="mb-3">
            <input type="password" class="form-control" asp-for="contraseña"  placeholder="Introduce tu contraseña" required>
          </div>
          <div class="mb-3">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="rememberMe">
              <label class="form-check-label" for="rememberMe">Recuerdame    &nbsp   </label>
              <a href="forget-3.html" class="text-decoration-none float-end">Olvidaste tu contraseña?</a>
            </div>

          </div>
          <button type="submit" class="btn btn-outline-secondary login-btn w-100 mb-3"> Iniciar sesion</button>
          
        </form>

        <!-- Register Link -->
        <p class="text-center register-test mt-3">No tienes cuenta? 
            <a  asp-area="" asp-controller="Usuario" asp-action="Registro" class="text-decoration-none">Registrarse</a></p>
      </div>
    </div>
  </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}